[flake8]
max-line-length = 125
extend-ignore = E203
exclude = .git,__pycache__,build,dist,*.egg-info,venv
per-file-ignores =
    # Allow missing docstrings in __init__ files
    __init__.py:D104
    # Allow missing docstrings in tests
    tests/*:D100,D101,D102,D103
import-order-style = google
docstring-convention = google
